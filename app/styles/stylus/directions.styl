@import 'nib'
@import 'variables'

.search-directions
  background-color rgb(250,250,250)

.search-direction-reverse
  &.md-button
    &.md-fab
      height 30px
      width 30px
      background-image url('data:image/svg+xml;base64,')
      background-size 32px

.search-directions-autocomplete
  box-shadow none
  width 100%
  margin-left 10px
  &.iternaty-item-bar
    &:before
      border-left 1px solid #bfbfbf
      content ''
      display block
      height 50px
      left -19px
      position absolute
      top -25px
      z-index 1
  input
    padding: 0
  md-autocomplete-wrap
    button
      display none


.iternaty-item-icon
  z-index 10


.search-direction-item-list-border
  &:after
    content ''
    position absolute
    bottom 0
    left 38px
    width calc(100% - 38px)
    border-bottom 1px solid rgba(135,135,135,0.32)

.search-direction-item-list
  padding 5px 0 5px 10px
  position relative

.add-waypoint-iternaty
  &.md-button
    &.md-fab
      width 17px
      height 17px
      position absolute
      left 11px
      top -10px
      padding 0
      margin 0
  i
    font-size 16px
    padding 0
    margin-top -5px

.remove-waypoint-iternaty
  &.md-button
    &.md-fab
      width 25px
      height 25px
      position absolute
      right 0
      top 12px
      padding 0
      margin 0
  i
    padding 0
    margin-top -4px
    margin-left 1px

.direction-info
  height 225px
  padding-left 15px

.use-current-position
  position absolute
  right 30px
  top 10px
  z-index 99

