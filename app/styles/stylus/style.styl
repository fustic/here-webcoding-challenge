@import 'nib'
@import 'variables'

a
  cursor pointer
  &:hover,
  &:focus
    text-decoration underline

.button-icon
  width 24px
  height 24px
  margin-top 1px

.md-button
  i
    font-size 18px

.filter-icon
  position fixed
  right 10px
  bottom 10px

md-input-container
  padding-bottom 12px
  .md-char-counter
    line-height 0

md-toast
  z-index 102
  &.md-error-theme
    background-color #E91E63
    color colorWhite
  &.md-success-theme
    background-color #4CAF50
    color colorWhite

.md-dialog-container
  z-index 101

md-content
  height 100%

.color-red
  color colorRed !important

.color-green
  color colorGreen !important

.color-yellow
  color colorYellow !important

.color-blue
  color colorBlue !important

.H_ib_tail
  bottom -0.7em

.H_ib_content
  margin .2em
  white-space nowrap

.draggable
  cursor move
