@import 'nib'
@import 'variables'

.search
  position fixed
  top 0
  left 0
  width 400px
  md-card
    background: #273142;
  .md-header
    height: 40px
  md-tabs
    &.md-default-theme
      md-tab
        color rgba(255, 255, 255, 0.6)
        &.active
          color colorWhite
          background: #0c1628

md-autocomplete
  &.search-places
    &:before
      content "\f301"
      font-family MaterialDesignIcons
      font-weight 400
      font-style normal
      speak none
      text-transform none
      text-rendering optimizeLegibility
      position absolute
      top 12px
      left 5px
    input
      padding-left 25px



md-autocomplete.search-places
md-autocomplete.search-directions-autocomplete
  height auto

.search-places ul[role=presentation]
.search-directions-autocomplete ul [role=presentation]
  position relative

.dropdown_list_item_title
.dropdown_list_item_description
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  display inline-block
  max-width 49%
  width 49%

.dropdown_list_item_icon
  display inline-block
  line-height 1.8rem
  overflow hidden
  vertical-align middle
  white-space nowrap
  height 28px
  img
    height 100%
    width auto

.dropdown_list_item_description
  color #010b1e
  text-align right

.place-information-toolbar
.place-information-toolbar .md-toolbar-tools
  min-height 40px
  height 40px

.place-information-toolbar-image
  height 80%
  width auto

.place-information-get-directions.md-button.md-fab
  height 35px
  width 35px
  position absolute
  right 2px
  top 2px

.place-information-get-directions
  i
    font-size: 25px
